set font                    "FiraCode 12"
set selection-notification	"true"
set selection-clipboard		"clipboard"
set guioptions			    nogui
set scroll-page-aware		"true"
set statusbar-home-tilde	"true"
set recolor			        "true"
set adjust-open			    "width"
set statusbar-h-padding		10
set statusbar-v-padding		10
include catpuccin-mocha

map <C-+> zoom in   # Zoom in with Ctrl + +
map <C--> zoom out  # Zoom out with Ctrl + -
map <C-0> zoom 100% # Reset zoom with Ctrl + 0
